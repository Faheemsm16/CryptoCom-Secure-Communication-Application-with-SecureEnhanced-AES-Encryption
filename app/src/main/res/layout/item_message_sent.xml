<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingEnd="8dp">

    <!-- Chat Bubble for Sent Message -->
    <TextView
        android:id="@+id/text_message_body_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_bubble_message_sent"
        android:padding="12dp"
        android:text="h!"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Timestamp for Sent Message -->
    <TextView
        android:id="@+id/text_message_time_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="11:40"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/text_message_body_sent"
        app:layout_constraintBottom_toBottomOf="@+id/text_message_body_sent" />

</androidx.constraintlayout.widget.ConstraintLayout>