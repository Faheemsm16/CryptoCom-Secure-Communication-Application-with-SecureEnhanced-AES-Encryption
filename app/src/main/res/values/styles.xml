<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#FF4081</item>
        <!-- Customize other theme attributes as needed -->
    </style>

    <style name="RoundedButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!-- Registration EditText Style -->
    <style name="RegistrationEditText" parent="Widget.AppCompat.EditText">
        <!-- Customize other attributes as needed -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Registration Button Style -->
    <style name="RegistrationButton" parent="Widget.AppCompat.Button">
        <!-- Customize other attributes as needed -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Registration Note Style -->
    <style name="RegistrationNote" parent="Widget.AppCompat.TextView">
        <!-- Customize other attributes as needed -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">16dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Chat Item Title Style -->
    <style name="ChatItemTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Chat Item Subtitle Style -->
    <style name="ChatItemSubtitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Chat Item Timestamp Style -->
    <style name="ChatItemTimestamp" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#888888</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize attributes as needed -->
        <item name="android:background">@color/colorPopupBackground</item>
        <item name="android:textColor">@color/colorPopupText</item>
    </style>

</resources>
